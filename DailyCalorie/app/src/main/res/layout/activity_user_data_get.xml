<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mohsenraeisi.Activities.Activites.UserDataGet"
    android:background="#fffefff3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bienvenue !"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#ff33be2b" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextAge"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:hint="Votre Age "
        android:textColor="#000000"
        android:focusableInTouchMode="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editTextPoids"
        android:layout_below="@+id/editTextAge"
        android:layout_alignLeft="@+id/editTextAge"
        android:layout_alignStart="@+id/editTextAge"
        android:layout_marginTop="14dp"
        android:layout_alignRight="@+id/editTextAge"
        android:layout_alignEnd="@+id/editTextAge"
        android:hint="Votre poids "
        android:inputType="numberDecimal"
        android:textColor="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:id="@+id/editTextTaille"
        android:layout_below="@+id/editTextPoids"
        android:layout_alignLeft="@+id/editTextPoids"
        android:layout_alignStart="@+id/editTextPoids"
        android:layout_marginTop="17dp"
        android:layout_alignRight="@+id/editTextPoids"
        android:layout_alignEnd="@+id/editTextPoids"
        android:hint="Votre taille"
        android:textColor="#000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aucune activitÃ©"
        android:id="@+id/rien"
        android:checked="false"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 - 3 jours par semaine"
        android:id="@+id/troisparsemain"
        android:checked="false"
        android:layout_below="@+id/rien"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4-5 jours par semaine"
        android:id="@+id/cinqparsemain"
        android:checked="false"
        android:layout_below="@+id/troisparsemain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/troisparsemain"
        android:layout_alignEnd="@+id/troisparsemain"
        android:textColor="#000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6-7 jours par semaine"
        android:id="@+id/septparsemain"
        android:layout_alignStart="@+id/cinqparsemain"
        android:checked="false"
        android:layout_below="@+id/cinqparsemain"
        android:layout_alignRight="@+id/cinqparsemain"
        android:layout_alignEnd="@+id/cinqparsemain"
        android:textColor="#000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 fois par jours"
        android:id="@+id/deuxparjour"
        android:layout_alignStart="@+id/septparsemain"
        android:checked="false"
        android:layout_below="@+id/septparsemain"
        android:layout_alignRight="@+id/septparsemain"
        android:layout_alignEnd="@+id/septparsemain"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:id="@+id/validerButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:background="#ff40ff31" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="vous exercez ...."
        android:id="@+id/textView3"
        android:textColor="#000000"
        android:layout_above="@+id/rien"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Homme"
        android:id="@+id/homme"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:checked="false"
        android:textColor="#ff3b3eff" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Femme"
        android:id="@+id/femme"
        android:layout_alignBottom="@+id/homme"
        android:layout_toRightOf="@+id/homme"
        android:layout_toEndOf="@+id/homme"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:checked="false"
        android:textColor="#ffff5ce6" />

</RelativeLayout>
